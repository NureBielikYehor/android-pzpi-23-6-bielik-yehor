<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/handlerMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message will appear here"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startHandlerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Handler"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/handlerMessageTextView"
        app:layout_constraintStart_toStartOf="@+id/handlerMessageTextView"
        app:layout_constraintTop_toBottomOf="@+id/handlerMessageTextView" />

    <Button
        android:id="@+id/secondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second activity"
        app:layout_constraintEnd_toEndOf="@+id/startHandlerButton"
        app:layout_constraintStart_toStartOf="@+id/startHandlerButton"
        app:layout_constraintTop_toBottomOf="@+id/startHandlerButton" />

    <Button
        android:id="@+id/thirdActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third activity"
        app:layout_constraintEnd_toEndOf="@+id/secondActivityButton"
        app:layout_constraintStart_toStartOf="@+id/secondActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/secondActivityButton" />

</androidx.constraintlayout.widget.ConstraintLayout>